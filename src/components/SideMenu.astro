---
export interface Props {
  active: string;
}

const { active } = Astro.props;
---

<aside class="hidden lg:block shrink-0 w-72">
  <div class="sticky top-6 bg-gray-50 rounded-lg p-4 space-y-12">
    <div>
      <h3 class="font-bold mb-3 text-gray-500">GETTING STARTED</h3>
      <ul class="flex flex-col space-y-3">
        <li>
          <a
            href="/docs/getting-started"
            class={active === "Introduction"
              ? "font-bold underline"
              : "hover:underline"}>Introduction</a
          >
        </li>
        <li>
          <a
            href="/docs/download"
            class={active === "Download"
              ? "font-bold underline"
              : "hover:underline"}>Download</a
          >
        </li>
        <li>
          <a
            href="/docs/license"
            class={active === "License"
              ? "font-bold underline"
              : "hover:underline"}>License</a
          >
        </li>
        <li>
          <a
            href="/docs/getting-started"
            class={active === "Changelog"
              ? "font-bold underline"
              : "hover:underline"}>Changelog</a
          >
        </li>
      </ul>
    </div>
    <div>
      <h3 class="font-bold mb-3 text-gray-500">COMPONENTS</h3>
      <ul class="flex flex-col space-y-3">
        <li>
          <a
            href="/docs/components/modal"
            class={active === "Modal"
              ? "font-bold underline"
              : "hover:underline"}>Modal</a
          >
        </li>
        <li>Tab</li>
        <li>DropDown</li>
        <li>Drawer</li>
        <li>OneTime</li>
        <li>ScrollTop</li>
      </ul>
    </div>
  </div>
</aside>
