---
import "@fontsource/montserrat";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:image"
      content="https://zerolinesjs.40yd.app/images/ogp.png"
    />
    <meta
      property="og:description"
      content="Headless UI components without writing a single line of JavaScript."
    />
    <title>{title}</title>
    <script
      src="https://cdn.jsdelivr.net/npm/zerolinesjs@0.1.0/dist/index.js"
      is:inline
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/zerolinesjs@0.1.0/dist/core.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.6.0/build/styles/stackoverflow-dark.min.css"
    />
    <script
      src="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.6.0/build/highlight.min.js"
      is:inline
    ></script>
    <script>
      hljs.highlightAll();
    </script>
  </head>
  <body class="mx-3 lg:mx-0">
    <slot />
    <Footer />
    <style is:global>
      @font-face {
        font-family: "montserrat";
        src: url("/fonts/montserrat-cyrillic-600-normal.woff") format("woff");
        font-weight: bold;
        font-style: normal;
        font-display: swap;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
        @apply px-1 py-0.5 rounded bg-gray-100 text-gray-900;
      }
    </style>
  </body>
</html>
